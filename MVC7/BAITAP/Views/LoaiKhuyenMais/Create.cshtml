@model BAITAP.Models.LoaiKhuyenMai

@{
    ViewData["Title"] = "Tạo mới loại khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Tạo mới loại khuyến mãi</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MaLoaiKm" class="control-label">Mã Loại Khuyến Mãi:</label>
                <input asp-for="MaLoaiKm" class="form-control" />
                <span asp-validation-for="MaLoaiKm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TenLoaiKm" class="control-label">Tên Loại Khuyến Mãi:</label>
                <input asp-for="TenLoaiKm" class="form-control" />
                <span asp-validation-for="TenLoaiKm" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Tạo mới</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
