@model BAITAP.Models.Mathang

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-4">Chi Tiết Mặt Hàng</h1>

    <hr />

    <dl class="row">
        <dt class="col-sm-2">Tên:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ten)</dd>

        <dt class="col-sm-2">Giá Gốc:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GiaGoc)</dd>

        <dt class="col-sm-2">Giá Bán:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GiaBan)</dd>

        <dt class="col-sm-2">Số Lượng:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SoLuong)</dd>

        <dt class="col-sm-2">Mô Tả:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MoTa)</dd>

        <dt class="col-sm-2">Hình Ảnh:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.HinhAnh)</dd>

        <dt class="col-sm-2">Lượt Xem:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LuotXem)</dd>

        <dt class="col-sm-2">Lượt Mua:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LuotMua)</dd>

        <dt class="col-sm-2">Mã Danh Mục:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MaDm)</dd>
    </dl>

    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MaMh">Chỉnh Sửa</a>
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </div>
</div>

@section scripts {
    <!-- Bạn có thể thêm các script Bootstrap tại đây nếu chưa có -->
}
