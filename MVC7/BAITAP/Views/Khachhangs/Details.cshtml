@model BAITAP.Models.Khachhang

@{
    ViewData["Title"] = "Chi Tiết";
}

<div class="container mt-4">
    <h1 class="display-4">Chi Tiết Khách Hàng</h1>

    <hr />

    <dl class="row">
        <dt class="col-sm-2">Tên:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ten)</dd>

        <dt class="col-sm-2">Điện thoại:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Dienthoai)</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Mật khẩu:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Matkhau)</dd>
    </dl>

    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MaKh">Chỉnh Sửa</a>
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </div>
</div>

@section scripts {
    <!-- Bạn có thể thêm các script Bootstrap tại đây nếu chưa có -->
}
