@model IEnumerable<BAITAP.Models.CtKhuyenMai>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Add your custom styles here */
    .table-container {
        max-width: 1000px; /* Adjust the maximum width as needed */
        margin: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
    }

    th {
        background-color: #f2f2f2;
    }

    td {
        max-width: 200px; /* Limit the maximum width of cells */
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="table-container">
    <p class="text-right">
        <a class="btn btn-success" asp-action="Create">Thêm mới</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TenKm)</th>
                <th>@Html.DisplayNameFor(model => model.MoTa)</th>
                <th>@Html.DisplayNameFor(model => model.NgayBatDau)</th>
                <th>@Html.DisplayNameFor(model => model.NgayKetThuc)</th>
                <th>@Html.DisplayNameFor(model => model.Soluongmuatoithieu)</th>
                <th>@Html.DisplayNameFor(model => model.Sotienmuatoithieu)</th>
                <th>@Html.DisplayNameFor(model => model.PhanTramGiamGia)</th>
                <th>@Html.DisplayNameFor(model => model.GiaGiam)</th>
                <th>@Html.DisplayNameFor(model => model.DieuKienApDung)</th>
                <th>@Html.DisplayNameFor(model => model.Soluongsudung)</th>
                <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                <th>@Html.DisplayNameFor(model => model.MaLoaiKmNavigation.MaLoaiKm)</th>
                <th>@Html.DisplayNameFor(model => model.NhomSpkhuyemaiNavigation.MaDm)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenKm)</td>
                    <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayBatDau)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayKetThuc)</td>
                    <td>@Html.DisplayFor(modelItem => item.Soluongmuatoithieu)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sotienmuatoithieu)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhanTramGiamGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaGiam)</td>
                    <td>@Html.DisplayFor(modelItem => item.DieuKienApDung)</td>
                    <td>@Html.DisplayFor(modelItem => item.Soluongsudung)</td>
                    <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaLoaiKmNavigation.MaLoaiKm)</td>
                    <td>@Html.DisplayFor(modelItem => item.NhomSpkhuyemaiNavigation.MaDm)</td>
                    <td>
                        <a class="btn btn-outline-primary mb-1" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-outline-success mb-1" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-outline-danger mb-1" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-archive-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
