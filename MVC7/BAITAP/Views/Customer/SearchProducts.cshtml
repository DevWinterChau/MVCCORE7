@model List<BAITAP.Models.Mathang>

@{
    ViewData["Title"] = "Tìm kiếm sản phẩm";
}


<section class="py-5">
    <div class="container px-4 px-lg-5 mt-3">
        <form method="post" asp-action="searchproducts">
            <div class="input-group">
                <input value="@ViewBag.keyword" type="text" class="form-control" name="keyword" placeholder="Nhập từ khóa tìm kiếm..." aria-label="Tìm kiếm sản phẩm" aria-describedby="button-search">
                <div class="input-group-append">
                    <button class="btn btn-success" type="submit" id="button-search">Tìm kiếm</button>
                </div>
            </div>

            <div class="mt-3">
                <label for="category-filter" class="form-label">Danh mục:</label>
                <select class="form-select" name="category" id="category-filter">
                    <option value="" selected>-- Tất cả --</option>
                    <option value="category1">Danh mục 1</option>
                    <option value="category2">Danh mục 2</option>
                    <!-- Add more options as needed -->
                </select>
            </div>
        </form>
    </div>


    <div class="container px-4 px-lg-5 mt-1">
        <h3 class="text-info">Kết quả tìm kiếm: @ViewBag.Keyword </h3>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->
                        @if (item.GiaGoc > item.GiaBan)
                        {
                            <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Khuyến mãi</div>
                        }
                        @if (item.LuotMua > 10)
                        {
                            <div class="badge bg-danger text-white position-absolute" style="top: 2rem; right: 0.5rem">Bán chạy</div>

                        }
                        <!-- Product image-->
                        <img class="card-img-top" src="~/images/products/@Html.DisplayFor(modelItem => item.HinhAnh)" alt="@item.Ten" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <a asp-action="Details" asp-route-id="@item.MaMh" style="text-decoration: none;">
                                    <h5 class="fw-bolder text-info">
                                        @Html.DisplayFor(modelItem => item.Ten)
                                    </h5>
                                </a>

                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star"></div>
                                </div>
                                <!-- Product price-->
                                @if (item.GiaGoc > item.GiaBan)
                                {
                                    <span class="text-muted text-decoration-line-through">
                                        @Html.DisplayFor(modelItem => item.GiaGoc)
                                    </span>
                                }
                                <span class="text-danger fw-bolder">
                                    @Html.DisplayFor(modelItem => item.GiaBan)
                                </span>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <a class="btn btn-outline-info mt-auto" href="#" onclick="addToCart('@item.MaMh', '@item.GiaBan', '@item.HinhAnh', '@item.Ten')">Chọn mua</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        @if(Model.Count > 0)
        {
            <ul class="pagination justify-content-center" style="margin: 20px 0;">

                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = 1 })">
                        <i class="bi bi-skip-start-btn-fill"></i>
                    </a>
                </li>
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })">
                            <i class="bi bi-arrow-left-square-fill"></i>
                        </a>
                    </li>
                }

                @for (var i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        @if (i == ViewBag.CurrentPage)
                        {
                            <span class="page-link">@i</span>
                        }
                        else
                        {
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        }
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item ">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">
                            <i class="bi bi-arrow-right-square-fill"></i>
                        </a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.TotalPages })">
                        <i class="bi bi-skip-end-btn-fill"></i>
                    </a>
                </li>
            </ul>

        }
        else
        {
           <div class="align-items-xl-center" >
                <div class="text-center"><a class="btn btn-outline-info mt-auto" asp-action="Index" >Quay lại danh sách</a></div>

            </div>
        }
    </div>
</section>


