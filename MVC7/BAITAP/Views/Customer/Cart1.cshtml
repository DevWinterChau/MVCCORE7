@model List<BAITAP.Request.Cart>
@{
    ViewData["Title"] = "Cart1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="text-info">Giỏ hàng của bạn</h3>
@if (Model.Count >0)
{
    int stt = 1;
    int thanhtien = 0;
    int tongtien = 0;

    <table class="table">
        <tr>
            <th>STT</th>
            <th>Tên hàng</th>
            <th>Giá bán</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
        @foreach (var i in Model)
        {
            thanhtien = i.giaban * i.soluongmua;
            tongtien += thanhtien;
            <tr>
                <td>
                    @(stt++)
                </td>
                <td>
                    <img width="50" src="~/images/products/@i.hinhanh" />@i.ten
                </td>
                <td>
                    @(i.giaban.ToString("n0")) VNĐ
                </td>
                <td>
                    <form asp-action="UpdateItem" method="post">
                        <div class="row">
                            <div class="col">
                                <input name="id" type="hidden" asp-for="@(i.id)" />
                                <input name="quantity" type="number" asp-for="@(i.soluongmua)" class="form-control" />
                            </div>
                            <div class="col">
                                <input class="btn btn-warning" type="submit" value="cập nhật" />
                            </div>
                        </div>
                    </form>
                </td>
                <td>
                    @(thanhtien.ToString("n0")) VNĐ
                </td>
                <td>
                    <a asp-action="RemoveItem" asp-route-itemid="@i.id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }


        <tr>
            <td colspan="4" class="text-end fw-bold"> Thành tiền</td>
            <td colspan="2"><strong class="text-danger">@(tongtien.ToString("n0")) VNĐ</strong></td>
        </tr>
    </table>
    <div class="text-end">
        <a class="btn btn-info" asp-action="checkOut">Thanh toán</a>
    </div>
}
    
else
{
    <p class="alert alert-danger"> Giỏ hàng rỗng!</p>
}