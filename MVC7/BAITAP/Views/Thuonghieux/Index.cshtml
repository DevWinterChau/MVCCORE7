@model IEnumerable<BAITAP.Models.Thuonghieu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="text-right">
    <a class="btn btn-success" asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenThuonghieu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenThuonghieu)
            </td>
            <td>
                    <a class="btn btn-outline-primary mb-1" asp-action="Edit" asp-route-id="@item.MaThuonghieu"><i class="bi bi-pencil"></i></a>
                    <a class="btn btn-outline-success mb-1" asp-action="Details" asp-route-id="@item.MaThuonghieu"><i class="bi bi-eye"></i></a>
                    <a class="btn btn-outline-danger mb-1" asp-action="Delete" asp-route-id="@item.MaThuonghieu"><i class="bi bi-archive-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
