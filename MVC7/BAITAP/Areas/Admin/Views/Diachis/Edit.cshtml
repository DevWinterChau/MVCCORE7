@model BAITAP.Models.Diachi

@{
    ViewData["Title"] = "Cập nhật địa chỉ";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<h3 class="mt-0">Cập nhật địa chỉ khách hàng</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Địa chỉ khách hàng</a></li>
    <li class="breadcrumb-item active">Cập nhật</li>
</ol>
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDc" />
            <div class="form-group">
                <label asp-for="MakhNavigation" class="control-label"></label>
                <select asp-for="Makh" class="form-control" asp-items="ViewBag.Makh"></select>
                <span asp-validation-for="Makh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diachi1" class="control-label"></label>
                <input asp-for="Diachi1" class="form-control" />
                <span asp-validation-for="Diachi1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phuongxa" class="control-label"></label>
                <input asp-for="Phuongxa" class="form-control" />
                <span asp-validation-for="Phuongxa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quanhuyen" class="control-label"></label>
                <input asp-for="Quanhuyen" class="form-control" />
                <span asp-validation-for="Quanhuyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tinhthanh" class="control-label"></label>
                <input asp-for="Tinhthanh" class="form-control" />
                <span asp-validation-for="Tinhthanh" class="text-danger"></span>
            </div>
            <div class="form-row">
                    <label asp-for="Macdinh" class="control-label"></label>
                    <select asp-for="Macdinh" class="form-control">
                        <option value="1">Mặc định</option>
                        <option value="0">Không</option>
                    </select>
                    <span asp-validation-for="Macdinh" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>

            </div>
        </form>
    </div>
</div>
