@model BAITAP.Models.CtKhuyenMaiSanPham

@{
    ViewData["Title"] = "Edit";
}


<h4>Cập nhật khuyến mãi sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MaCtkm" class="control-label"></label>
                <select asp-for="MaCtkm" class="form-control" asp-items="ViewBag.MaCtkm"></select>
                <span asp-validation-for="MaCtkm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mamh" class="control-label"></label>
                <select asp-for="Mamh" class="form-control" asp-items="ViewBag.Mamh"></select>
                <span asp-validation-for="Mamh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phantramkhuyenmai" class="control-label"></label>
                <input asp-for="Phantramkhuyenmai" class="form-control" />
                <span asp-validation-for="Phantramkhuyenmai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-info">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>


