@model BAITAP.DTO.DetailMhs

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container mt-4">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MatHangChinh.Ten)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatHangChinh.Ten)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MatHangChinh.Hinhanh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatHangChinh.Hinhanh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MatHangChinh.Ngaytao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatHangChinh.Ngaytao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MatHangChinh.Ngaycapnhat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatHangChinh.Ngaycapnhat)
        </dd>
        <dt class="col-sm-2">
            Chi tiết phiên bản sản phẩm
        </dt>
        <dd class="col-sm-10">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Tên</th>
                        <th scope="col">Giá Gốc</th>
                        <th scope="col">Giá Bán</th>
                        <th scope="col">Số Lượng</th>
                        <th scope="col">Mô Tả</th>
                        <th scope="col">Hình Ảnh</th>
                        <th scope="col">Lượt Xem</th>
                        <th scope="col">Lượt Mua</th>
                        <th scope="col">Danh Mục</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DanhSachPhienBan)
                    {
                        <tr>
                            <td>@item.Ten</td>
                            <td>@item.GiaGoc</td>
                            <td>@item.GiaBan</td>
                            <td>@item.SoLuong</td>
                            <td>@item.MoTa</td>
                            <td>
                                <img src="~/images/products/@item.HinhAnh" alt="Hình ảnh" style="max-width: 100px;" />
                            </td>
                            <td>@item.LuotXem</td>
                            <td>@item.LuotMua</td>
                            <td>@item.Danhmucs.Ten</td>
                            <td>
                                <a class="btn btn-outline-primary mb-1" asp-controller="mathangs" asp-action="Edit" asp-route-id="@item.MaMh"><i class="bi bi-pencil"></i></a>
                                <a class="btn btn-outline-success mb-1" asp-controller="mathangs" asp-action="Details" asp-route-id="@item.MaMh"><i class="bi bi-eye"></i></a>
                                <a class="btn btn-outline-danger mb-1" asp-controller="mathangs" asp-action="Delete" asp-route-id="@item.MaMh"><i class="bi bi-archive-fill"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>

<div class="container">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.MatHangChinh.Id">Chỉnh Sửa</a> |
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>
