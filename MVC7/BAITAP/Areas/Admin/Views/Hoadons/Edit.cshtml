@model BAITAP.Models.Hoadon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container">
    <h4 class="mt-4">Chỉnh Sửa Hóa Đơn</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Mahd" />
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Makh" class="control-label">Khách hàng</label>
                            <select asp-for="Makh" class="form-control" asp-items="ViewBag.Makh"></select>
                            <span asp-validation-for="Makh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Ngay" class="control-label">Ngày</label>
                            <input asp-for="Ngay" class="form-control" />
                            <span asp-validation-for="Ngay" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Trangthai" class="control-label">Trạng Thái</label>
                            <select asp-for="Trangthai" class="form-control">
                                <option value="0">Chưa xác nhận</option>
                                <option value="1">Xác nhận</option>
                                <option value="2">Đang giao hàng</option>
                                <option value="3">Đã nhận hàng</option>
                                <option value="4">Hủy</option>
                            </select>
                            <span asp-validation-for="Trangthai" class="text-danger"></span>
                        </div>
                    </div>
                </div>
         
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Tongtien" class="control-label">Tổng Tiền</label>
                            <input asp-for="Tongtien" class="form-control" />
                            <span asp-validation-for="Tongtien" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Tennguoinhan" class="control-label">Tên Người Nhận</label>
                            <input asp-for="Tennguoinhan" class="form-control" />
                            <span asp-validation-for="Tennguoinhan" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Sodienthoai" class="control-label">Số Điện Thoại</label>
                            <input asp-for="Sodienthoai" class="form-control" />
                            <span asp-validation-for="Sodienthoai" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Tinh" class="control-label"></label>
                            <input asp-for="Tinh" class="form-control" />
                            <span asp-validation-for="Tinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Quanhuyen" class="control-label"></label>
                            <input asp-for="Quanhuyen" class="form-control" />
                            <span asp-validation-for="Quanhuyen" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Xaphuong" class="control-label"></label>
                            <input asp-for="Xaphuong" class="form-control" />
                            <span asp-validation-for="Xaphuong" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <!-- ... Additional address fields ... -->

                        <div class="form-group">
                            <label asp-for="Diachi" class="control-label">Địa Chỉ</label>
                            <input asp-for="Diachi" class="form-control" />
                            <span asp-validation-for="Diachi" class="text-danger"></span>
                        </div>

                    </div>
                </div>            


                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
