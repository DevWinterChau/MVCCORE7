@model BAITAP.Models.Danhmuc

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";

}
<style>
    /* Add your custom styles here */
    .table-container {
        max-width: 800px; /* Adjust the maximum width as needed */
        margin: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
    }

    th {
        background-color: #f2f2f2;
    }

    td {
        max-width: 200px; /* Limit the maximum width of cells */
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h4>Chi Tiết Danh Mục</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Ten)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Mathangs)</strong>
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá góc</th>
                        <th>Giá bán</th>
                        <th>Mô tả</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Mathangs)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Ten)</td>

                            <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                            <td>@Html.DisplayFor(modelItem => item.GiaGoc)</td>
                            <td>@Html.DisplayFor(modelItem => item.GiaBan)</td>
                            <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                            <td>
                                <a class="btn btn-outline-success mb-1" asp-action="Details" asp-controller="mathangs" asp-route-id="@item.MaMh"><i class="bi bi-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </dd>
    </dl>
</div>

<div class="container mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MaDm">Chỉnh Sửa</a> |
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>
