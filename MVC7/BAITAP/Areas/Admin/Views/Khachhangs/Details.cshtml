@model BAITAP.Models.Khachhang

@{
    ViewData["Title"] = "Chi Tiết khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";

}
<style>
    /* Add your custom styles here */
    .table-container {
        max-width: 100%; /* Adjust the maximum width as needed */
        margin: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
    }

    th {
        background-color: #f2f2f2;
    }

    td {
        max-width: 200px; /* Limit the maximum width of cells */
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h3 class="mt-0">Chi tiết khách hàng</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Khách hàng</a></li>
    <li class="breadcrumb-item active">Xem chi tiết</li>
</ol>
<div class="container mt-4">
    <dl class="row">
        <dt class="col-sm-2">Tên:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ten)</dd>

        <dt class="col-sm-2">Điện thoại:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Dienthoai)</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Mật khẩu:</dt>

        <dd class="col-sm-10">@Html.DisplayFor(model => model.Matkhau)</dd>
        <dt class="col-sm-2">Địa chỉ:</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tỉnh </th>
                        <th>Quận</th>
                        <th>Xã phường</th>
                        <th>Địa chỉ chi tiết</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Diachis)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Tinhthanh)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quanhuyen)</td>
                            <td>@Html.DisplayFor(modelItem => item.Phuongxa)</td>
                            <td>@Html.DisplayFor(modelItem => item.Diachi1)</td>
                            <td>
                                <a class="btn btn-outline-success mb-1" asp-action="delete" asp-controller="diachis" asp-route-id="@item.MaDc"><i class="bi bi-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </dd>

    </dl>

    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MaKh">Chỉnh Sửa</a>
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </div>
</div>

@section scripts {
    <!-- Bạn có thể thêm các script Bootstrap tại đây nếu chưa có -->
}
