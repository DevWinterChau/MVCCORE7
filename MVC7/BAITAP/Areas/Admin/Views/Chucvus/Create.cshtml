@model BAITAP.Models.Chucvu

@{
    ViewData["Title"] = "Thêm Mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}


<h3 class="mt-4">Thêm chức vụ</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Chức vụ</a></li>
    <li class="breadcrumb-item active">Thêm mới</li>
</ol>
<div class="row justify-content-start">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ten" class="control-label">Tên Chức Vụ:</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Heso" class="control-label">Hệ Số:</label>
                <input asp-for="Heso" class="form-control" />
                <span asp-validation-for="Heso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Thêm Mới</button>
                <a class="btn btn-outline-info" asp-action="Index">Quay lại danh sách</a>

            </div>
        </form>
    </div>
</div>
