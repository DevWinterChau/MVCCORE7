@model BAITAP.Models.Chucvu

@{
    ViewData["Title"] = "Chi Tiết Chức Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}
<style>
    /* Add your custom styles here */
    .table-container {
        max-width: 100%; /* Adjust the maximum width as needed */
        margin: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
    }

    th {
        background-color: #f2f2f2;
    }

    td {
        max-width: 200px; /* Limit the maximum width of cells */
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h3 class="mt-0">Chi tiết chức vụ</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Chức vụ</a></li>
    <li class="breadcrumb-item active">Xem chi tiết</li>
</ol>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Ten)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Heso)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Heso)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Nhanviens)</strong>
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên </th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Nhanviens)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Dienthoai)</td>
                            <td>
                                <a class="btn btn-outline-success mb-1" asp-action="Details" asp-controller="nhanviens" asp-route-id="@item.Manv"><i class="bi bi-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </dd>

    </dl>
</div>

<div class="container mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Macv">Chỉnh Sửa</a> |
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>
