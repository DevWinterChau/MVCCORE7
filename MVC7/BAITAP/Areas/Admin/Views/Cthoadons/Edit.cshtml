@model BAITAP.Models.Cthoadon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-4">Cập nhật</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Chi tiết hóa đơn</a></li>
    <li class="breadcrumb-item active">Cập nhật</li>
</ol>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Macthd" />
            <div class="form-group">
                <label asp-for="Mahd" class="control-label"></label>
                <select asp-for="Mahd" class="form-control" asp-items="ViewBag.Mahd"></select>
                <span asp-validation-for="Mahd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mamh" class="control-label"></label>
                <select asp-for="Mamh" class="form-control" asp-items="ViewBag.Mamh"></select>
                <span asp-validation-for="Mamh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dongia" class="control-label"></label>
                <input asp-for="Dongia" class="form-control" />
                <span asp-validation-for="Dongia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soluong" class="control-label"></label>
                <input asp-for="Soluong" class="form-control" />
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thanhtien" class="control-label"></label>
                <input asp-for="Thanhtien" class="form-control" />
                <span asp-validation-for="Thanhtien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="lưu" class="btn btn-primary" />
                <a asp-action="Details" asp-controller="hoadons" asp-route-id="@Model.Mahd">Quay lại hóa đơn</a>
            </div>
        </form>
    </div>
</div>
