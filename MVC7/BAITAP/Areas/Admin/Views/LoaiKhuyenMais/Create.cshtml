@model BAITAP.Models.LoaiKhuyenMai

@{
    ViewData["Title"] = "Tạo mới loại khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}


<h3 class="mt-0">Thêm mới loại khuyến mãi</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Loại khuyến mãi</a></li>
    <li class="breadcrumb-item active">Thêm mới</li>
</ol>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="mt-3">
            <div class="form-group">
                <label asp-for="TenLoaiKm" class="control-label">Tên Loại Khuyến Mãi:</label>
                <input asp-for="TenLoaiKm" class="form-control" />
                <span asp-validation-for="TenLoaiKm" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Tạo mới</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>
