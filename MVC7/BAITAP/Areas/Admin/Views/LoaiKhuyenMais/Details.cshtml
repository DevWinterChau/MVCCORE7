@model BAITAP.Models.LoaiKhuyenMai

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container mt-4">
    <h1 class="display-4">Chi Tiết Loại Khuyến Mãi</h1>

    <hr />

    <dl class="row">
        <dt class="col-sm-2">Tên Loại Khuyến Mãi:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TenLoaiKm)</dd>
    </dl>

    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MaLoaiKm">Chỉnh Sửa</a>
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </div>
</div>

@section scripts {
    <!-- Bạn có thể thêm các script Bootstrap tại đây nếu chưa có -->
}
