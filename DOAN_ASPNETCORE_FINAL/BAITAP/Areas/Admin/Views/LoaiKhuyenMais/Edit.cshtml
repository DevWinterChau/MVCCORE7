@model BAITAP.Models.LoaiKhuyenMai

@{
    ViewData["Title"] = "Cập nhật loại khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<h3 class="mt-0">Cập nhật loại khuyến mãi</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Loại khuyến mãi</a></li>
    <li class="breadcrumb-item active">Cập nhật</li>
</ol>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaLoaiKm" />
            <div class="form-group">
                <label asp-for="TenLoaiKm" class="control-label"></label>
                <input asp-for="TenLoaiKm" class="form-control" />
                <span asp-validation-for="TenLoaiKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

