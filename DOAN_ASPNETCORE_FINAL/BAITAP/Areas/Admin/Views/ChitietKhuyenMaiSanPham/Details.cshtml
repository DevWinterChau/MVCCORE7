@model BAITAP.Models.CtKhuyenMaiSanPham

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<h3 class="mt-4">Chi tiết sản phẩm khuyến mãi</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Sản phẩm khuyến mãi</a></li>
    <li class="breadcrumb-item active">Xem chi tiết</li>
</ol>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Phantramkhuyenmai)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phantramkhuyenmai) %
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.MaCtkmNavigation)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaCtkmNavigation.TenKm)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.MamhNavigation)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MamhNavigation.Ten)
        </dd>
    </dl>
</div>

<div class="container mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh Sửa</a> |
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>
