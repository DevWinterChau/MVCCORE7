@model BAITAP.Models.Nhanvien

@{
    ViewData["Title"] = "Chi tiết nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<h3 class="mt-0">Chi tiết nhân viên</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="index">Nhân viên</a></li>
    <li class="breadcrumb-item active">Xem chi tiết</li>
</ol>
<div class="container mt-2">
    <dl class="row">
        <dt class="col-sm-2">Tên:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ten)</dd>

        <dt class="col-sm-2">Điện thoại:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Dienthoai)</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Mã Chức Vụ:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MacvNavigation.Ten)</dd>
    </dl>
    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Manv">Chỉnh Sửa</a>
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </div>
</div>

@section scripts {
    <!-- Bạn có thể thêm các script Bootstrap tại đây nếu chưa có -->
}
